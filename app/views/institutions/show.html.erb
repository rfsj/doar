<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @institution.name %>
</p>

<p>
  <strong>Cnpj:</strong>
  <%= @institution.cnpj %>
</p>

<p>
  <strong>Cep:</strong>
  <%= @institution.cep %>
</p>

<p>
  <strong>Address:</strong>
  <%= @institution.address %>
</p>

<p>
  <strong>Phone:</strong>
  <%= @institution.phone %>
</p>

<p>
  <strong>Email:</strong>
  <%= @institution.email %>
</p>

<p>
  <strong>Latitude:</strong>
  <%= @institution.latitude %>
</p>

<p>
  <strong>Longitude:</strong>
  <%= @institution.longitude %>
</p>

<%= link_to 'Edit', edit_institution_path(@institution) %> |
<%= link_to 'Back', institutions_path %>

<h2>need</h2>
<% @institution.donation.each do |donation| %>
  <p>
    <strong>name:</strong>
    <%= donation.name %>
  </p>

  <p>
    <strong>description:</strong>
    <%= donation.description %>
  </p>

  <p>
    <strong>need:</strong>
    <%= donation.need %>
  </p>
<% end %>

<h2>need form</h2>
<%= form_with model: [ @institution, @institution.donation.build ] do |form| %>
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label :need %>
    <%= form.text_field :need %>
  </div>

  <div class="field">
    <%= form.label :institution_id %>
    <%= form.text_field :institution_id %>
  </div>
  <p>
    <%= form.submit %>
  </p>
<% end %>